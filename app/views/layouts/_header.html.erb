<header class="navbar navbar-fixed-down navbar-inverse">
    <div class="navbar-inner">
        <%= link_to "Panda App", root_path, id:"logo"%>
        <nav>
            <ul class="nav pull-right">
                <li><%= link_to "Home" , root_path%></li>
                <% if signed_in? %>
                    <% @user ||= current_user %>
                    <li><%= link_to "#{@user.followed_users.count} Following ", following_user_path(@user)%></li>
                    <li><%= link_to "#{@user.followers.count} Followers ", followers_user_path(@user)%></li>

                    <li id="fat-menu" class="dropdown"> 
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <%= current_user.name %> <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><%= link_to "My", user_path(current_user)%></li>
                            <li><%= link_to "Updete", edit_user_path(current_user)%></li>
                            <li><%= link_to "All User", users_path %></li>
                            <li class="divider"></li>
                            <li><%= link_to "Sign out", signout_path, method: :delete%></li>
                        </ul>
                    </li>
                    <%= gravatar_for current_user,size:40%> 
                <% else %>
                    <li><%= link_to "Sign in" , signin_path%></li>
                <% end %>
            </ul>
        </nav>
    </div>
</header>
<% provide(:title, "All Users") %>
<h1>All Users</h1>
<div>
    <%= will_paginate @users %>
    <% @users.each do |user| %>
        <li>
            <%= gravatar_for user%>
        </li>
        <li>
            用户: <%= link_to user.name, user%> |
            邮箱: <%= user.email %>
        </li>
        <li>
            创建时间: <%= user.created_at %> | 
            <% if !current_user?(user) && current_user.admin %>
                <%= link_to "delete", user, method: :delete %>
            <% end %>
        </li><p>
    <% end %>
    <%= will_paginate @users %>
</div>